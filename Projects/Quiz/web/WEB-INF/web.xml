<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.user.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>playquiz</servlet-name>
        <servlet-class>controller.quiz.QuizServlet</servlet-class>
    </servlet>

    <servlet-mapping>
     <servlet-name>LoginServlet</servlet-name>
     <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
     <servlet-name>playquiz</servlet-name>
     <url-pattern>/playquiz</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>controller.user.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>questionServlet</servlet-name>
        <servlet-class>controller.question.QuestionServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/userForm</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/adduser</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>questionServlet</servlet-name>
        <url-pattern>/addquestionform</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>questionServlet</servlet-name>
        <url-pattern>/deletequestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>questionServlet</servlet-name>
        <url-pattern>/addquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>questionServlet</servlet-name>
        <url-pattern>/editquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        
        <servlet-name>questionServlet</servlet-name>
        <url-pattern>/qlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>questionServlet</servlet-name>
        <url-pattern>/updatequestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>playquiz</servlet-name>
        <url-pattern>/option1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>playquiz</servlet-name>
        <url-pattern>/option2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>playquiz</servlet-name>
        <url-pattern>/option3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>playquiz</servlet-name>
        <url-pattern>/option4</url-pattern>
    </servlet-mapping>
</web-app>